{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Cypher Query Language",
	"patterns": [
		{
			"include": "#objects"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#classes"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#nodes"
		},
		{
			"include": "#relationships"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#parameters"
		},
		{
			"include": "#variables"
		},
		{
			"include": "#parameters"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line.double-slash.cypher",
					"match": "\/\/.*$"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.cypher",
					"match": "\\b(?<!\\.)(?i)(match|optional|with|call|yield|where|foreach|and|or|as|return|distinct|case|when|end|is|then|else|limit|create|merge|on|update|set|order|by|asc|desc|constraint|not|exists|if|assert|node|key|unique|index|delete|detach|drop|load|csv|ascending|descending|remove|relationship|show|exist|constraint|constraints|brief|verbose|output|btree|all|indexes|skip|union|unwind|use|using|seek|join|periodic|commit|scan|in|contains)\\b"
				}
			]
		},
		"classes": {
			"patterns": [
				{
					"name": "support.class.cypher",
					"match": "\\b(?i)(apoc)\\b"
				}
			]
		},
		"constants": {
			"patterns": [
				{
					"name": "constant.language.cypher",
					"match": "\\b(?i)(true|false)\\b"
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric.cypher",
					"match": "\\b[0-9]+\\b"
				}
			]
		},
		"nodes": {
			"name": "meta.node.cypher",
			"begin": "(\\((?=\\b\\w+\\b\\s*:\\s*[A-Z]\\w*\\s+{.*}\\)))|(\\((?=\\w+\\)))|(\\((?=\\s*:\\s*[A-Z]\\w*\\)))|(\\((?=\\b\\w+\\b\\s*:\\s*[A-Z]\\w*\\)))",
			"end": "((?<=\\(\\b\\w+\\b\\s*:\\s*[A-Z]\\w*\\s+{.*})\\))|((?<=\\(\\w+)\\))|((?<=\\(\\s*:\\s*[A-Z]\\w*)\\))|((?<=\\(\\b\\w+\\b\\s*:\\s*[A-Z]\\w*)\\))",
			"patterns": [
				{
					"name": "entity.name.class.cypher",
					"match": "(?<=:)\\s*\\b\\w+"
				},
				{
					"include": "#parameters"
				},
				{
					"include": "#variables"
				},
				{
					"include": "#functions"
				},
				{
					"include": "#objects"
				},
				{
					"include": "#strings"
				}
			]
		},
		"relationships": {
			"name": "meta.relationship.cypher",
			"begin": "(\\[(?=\\w+\\]))|(\\[(?=\\s*:\\s*[A-Z]\\w*\\]))|(\\[(?=\\b\\w+\\b\\s*:\\s*[A-Z]\\w*\\]))",
			"end": "((?<=\\[\\w+)\\])|((?<=\\[\\s*:\\s*[A-Z]\\w*)\\])|((?<=\\[\\b\\w+\\b\\s*:\\s*[A-Z]\\w*)\\])",
			"patterns": [
				{
					"name": "markup.bold",
					"match": "(?<=:)\\s*\\b\\w+"
				},
				{
					"include": "#variables"
				}
			]
		},
		"functions": {
			"name": "meta.function.cypher",
			"begin": "(\\w+)(?=\\()",
			"end": "\\)",
			"beginCaptures": {
				"0": {
					"name": "support.function"
				}
			},
			"patterns": [
				{
					"include": "#strings"
				},
				{
					"include": "#objects"
				},
				{
					"include": "#numbers"
				},
				{
					"include": "#keywords"
				},
				{
					"include": "#constants"
				},
				{
					"include": "#parameters"
				},
				{
					"include": "#variables"
				}
			]
		},
		"variables": {
			"patterns": [
				{
					"name": "entity.name.variable.cypher",
					"match": "\\w+"
				}
			]
		},
		"parameters": {
			"patterns": [
				{
					"name": "entity.name.tag",
					"match": "(?<=\\.)\\w+"
				}
			]
		},
		"objects": {
			"name": "meta.object.cypher",
			"begin": "{",
			"end": "}",
			"patterns": [
				{
					"name": "entity.name.tag.cypher",
					"match": "\\w+(\\s*):"
				},
				{
					"include": "#numbers"
				},
				{
					"include": "#functions"
				},
				{
					"include": "#constants"
				},
				{
					"include": "#parameters"
				},
				{
					"include": "#variables"
				},
				{
					"include": "#strings"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.cypher",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.cypher",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.cypher"
}